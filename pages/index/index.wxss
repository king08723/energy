  background: #ff4d4f;
  box-shadow: 0 0 8rpx rgba(239, 68, 68, 0.6);
}

.alert-dot.medium {
  background: #faad14;
  box-shadow: 0 0 8rpx rgba(245, 158, 11, 0.6);
}

.alert-dot.low {
  background: #1890ff;
  box-shadow: 0 0 8rpx rgba(24, 144, 255, 0.6);
}

.alert-text {
  flex: 1;
  font-size: 26rpx;
  color: #1e293b; /* 与总能耗显示卡相同的深色文字 */
