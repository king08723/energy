  min-height: 120rpx; /* 统一卡片高度 */
  min-width: 0; /* 确保flex子元素能够正确收缩 */
  border: 1px solid rgba(59, 130, 246, 0.08);
}

/* 能耗类型特定样式 */
.energy-card-electricity {
  /* 移除左侧边框，保留类名以便未来可能的样式调整 */
}

.energy-card-water {
  /* 移除左侧边框 */
}

.energy-card-gas {
  /* 移除左侧边框 */
}

.energy-card-carbon {
  /* 移除左侧边框 */
}

