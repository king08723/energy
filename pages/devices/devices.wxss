  background: var(--energy-color-primary-dark);
}

.pagination-pages {
  display: flex;
  align-items: center;
  gap: 6rpx;
  max-width: 300rpx;
  overflow-x: auto;
  padding: 0 6rpx;
}

.pagination-page {
  min-width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--energy-color-background);
  color: var(--energy-color-text-secondary);
  border-radius: 8rpx;
  font-size: 24rpx;
  border: 1rpx solid var(--energy-color-border);
  transition: all 0.3s ease;
}

.pagination-page.active {
  background: var(--energy-color-primary);
  color: white;
  border-color: var(--energy-color-primary);
  font-weight: bold;
}

.pagination-page:not(.active):active {
  transform: scale(0.95);
  background: var(--energy-color-surface);
