/* 统一趋势指示器样式 */
.data-trend {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(100, 116, 139, 0.1);
  border: 1px solid rgba(100, 116, 139, 0.2);
  transition: all 0.2s ease;
  flex-shrink: 0; /* 防止收缩 */
  margin-left: auto; /* 推到右侧 */
}

/* 列表视图中的趋势指标样式 */
.data-card-list .data-trend {
  flex-direction: row;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
}

.trend-arrow {
  font-size: 20rpx; /* 稍微增大 */
  color: #64748b;
  font-weight: 600;
}

.trend-value {
  font-size: 24rpx;
  font-weight: 600;
  line-height: 1;
}

.data-trend.up {
  background: rgba(239, 68, 68, 0.1);
  border-color: rgba(239, 68, 68, 0.2);
}

.data-trend.down {
  background: rgba(16, 185, 129, 0.1);
  border-color: rgba(16, 185, 129, 0.2);
}

.data-trend.up .trend-arrow,
.data-trend.up .trend-value {
  color: #ef4444;
}

.data-trend.down .trend-arrow,
.data-trend.down .trend-value {
  color: #10b981;
}

/* 悬停效果 */
.data-card:hover .data-trend {
  transform: scale(1.05);
}

.data-card:hover .data-trend.up {
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.2);
}

.data-card:hover .data-trend.down {
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.2);
}

