  margin-bottom: 32rpx;
}

.energy-mb-24 {
  margin-bottom: 24rpx;
}

.energy-mb-16 {
  margin-bottom: 16rpx;
}

.energy-p-32 {
  padding: 32rpx;
}

.energy-p-24 {
  padding: 24rpx;
