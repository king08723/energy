  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  /* 现代浅色背景渐变 */
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.9) 0%, 
    rgba(255, 255, 255, 0.85) 50%,
    rgba(248, 250, 252, 0.9) 100%);
  /* 优雅的边框 */
  border: 1px solid rgba(59, 130, 246, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  /* 现代阴影效果 */
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 1rpx 4rpx rgba(59, 130, 246, 0.1) inset,
    0 0 0 1px rgba(255, 255, 255, 0.8) inset;
  transition: all 0.3s ease;
  cursor: pointer;
}

.device-item:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, 
    rgba(248, 250, 252, 0.95) 0%, 
    rgba(241, 245, 249, 0.9) 100%);
  border-color: rgba(59, 130, 246, 0.25);
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(59, 130, 246, 0.15) inset,
    0 0 0 1px rgba(255, 255, 255, 0.9) inset;
}

/* 空状态样式 - 调整为与首页一致的浅色风格 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

/* 性能监控样式 */
.performance-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

/* 性能网格布局优化 */
.performance-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 20rpx;
  margin-top: 24rpx;
}

/* 性能卡片基础样式 - 使用CSS变量支持主题色彩 */
.performance-item {
  position: relative;
  padding: 24rpx 20rpx;
  min-height: 200rpx; /* 增加高度适应分行布局 */
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.95) 0%, 
    rgba(248, 250, 252, 0.9) 50%,
    rgba(241, 245, 249, 0.85) 100%);
  border: 2rpx solid rgba(var(--theme-rgb), 0.15);
  border-radius: 16rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 2rpx 8rpx rgba(var(--theme-rgb), 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  cursor: pointer;
  text-align: center;
}

/* 为每个性能卡片定义独特的主题色彩 */
.performance-item-response {
  --theme-rgb: 59, 130, 246; /* 蓝色 - 响应时间 */
  --theme-color: #3B82F6;
  --theme-color-light: #93C5FD;
}

.performance-item-success {
  --theme-rgb: 16, 185, 129; /* 绿色 - 成功率 */
  --theme-color: #10B981;
  --theme-color-light: #6EE7B7;
}

.performance-item-latency {
  --theme-rgb: 245, 158, 11; /* 橙色 - 网络延迟 */
  --theme-color: #F59E0B;
  --theme-color-light: #FCD34D;
}

/* 顶部彩色边框指示器 */
.performance-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--theme-color) 0%, var(--theme-color-light) 100%);
  opacity: 0.8;
}

/* 悬停效果 */
.performance-item:hover {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.12),
    0 8rpx 24rpx rgba(var(--theme-rgb), 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border-color: rgba(var(--theme-rgb), 0.3);
}

/* 点击反馈效果 */
.performance-item:active {
  transform: translateY(-2rpx) scale(0.98);
  transition: all 0.1s ease;
}

/* 指标头部布局 - 分行显示优化 */
.metric-header {
  display: flex;
  flex-direction: column; /* 改为垂直排列 */
  align-items: center;
  gap: 8rpx; /* 元素间距 */
  margin-bottom: 16rpx;
  height: auto; /* 自适应高度 */
  min-height: 80rpx; /* 调整最小高度适应分行布局 */
}

/* 指标图标样式 */
.metric-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background: rgba(var(--theme-rgb), 0.1);
  margin-right: 8rpx;
}

/* 指标标签样式 - 分行布局优化 */
.metric-label {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
  line-height: 1.3; /* 适当增加行高 */
  text-align: center; /* 居中对齐 */
  white-space: normal; /* 允许换行 */
  word-break: break-all; /* 必要时断词 */
  max-width: 100%; /* 使用全宽 */
}

/* 趋势指示器优化 */
.trend-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgba(var(--theme-rgb), 0.1);
}

.trend-icon {
  font-size: 20rpx;
  animation: trendPulse 2s ease-in-out infinite;
}

.trend-indicator.up .trend-icon {
  color: #EF4444;
}

.trend-indicator.down .trend-icon {
  color: #10B981;
}

@keyframes trendPulse {
  0%, 100% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.1); opacity: 1; }
}

/* 指标数值显示区域 - 固定高度确保对齐 */
.metric-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin: 16rpx 0;
  gap: 4rpx;

}

/* 数值样式 - 添加动画效果 */
.value-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--theme-color);
  line-height: 1;
  transition: all 0.3s ease;
  animation: numberCountUp 0.8s ease-out;
}

.value-unit {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 500;
  margin-left: 2rpx;
}

@keyframes numberCountUp {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 指标指示器容器 */
.metric-indicator {
  margin-top: 12rpx;
}

/* 性能进度条 */
.performance-bar {
  width: 100%;
  height: 6rpx;
  background: rgba(var(--theme-rgb), 0.15);
  border-radius: 3rpx;
  overflow: hidden;
  position: relative;
}

.performance-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: linear-gradient(90deg, var(--theme-color) 0%, var(--theme-color-light) 100%);
  border-radius: 3rpx;
  transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { box-shadow: 0 0 0 rgba(255,255,255,0.4); }
  50% { box-shadow: 0 0 8rpx rgba(255,255,255,0.6); }
  100% { box-shadow: 0 0 0 rgba(255,255,255,0.4); }
}

/* 成功率进度条样式 */
.success-rate-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(156, 163, 175, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.rate-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--theme-color) 0%, var(--theme-color-light) 100%);
  border-radius: 4rpx;
  transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.rate-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  animation: progressShimmer 2s infinite;
}

@keyframes progressShimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 延迟指示器样式优化 */
.latency-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 8rpx;
  position: relative;
}

.latency-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--theme-color);
  animation: latencyPulse 2s ease-in-out infinite;
  position: relative;
  z-index: 2;
}

.latency-pulse {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--theme-color);
  opacity: 0.3;
  animation: latencyRipple 2s ease-in-out infinite;
}

/* 延迟等级色彩 */
.latency-indicator.good .latency-dot,
.latency-indicator.good .latency-pulse {
  background: #10B981;
}

.latency-indicator.warning .latency-dot,
.latency-indicator.warning .latency-pulse {
  background: #F59E0B;
}

.latency-indicator.error .latency-dot,
.latency-indicator.error .latency-pulse {
  background: #EF4444;
}

@keyframes latencyPulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(1.2); }
}

@keyframes latencyRipple {
  0% { opacity: 0.3; transform: scale(1); }
  50% { opacity: 0.1; transform: scale(2); }
  100% { opacity: 0; transform: scale(3); }
}

/* 加载状态样式 */
.performance-item.loading {
  position: relative;
  overflow: hidden;
}

.performance-item.loading::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.6), transparent);
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 智能推荐样式 - 优化版本 */
.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  /* 添加容器内边距 */
  padding: 8rpx 0;
}

.recommendation-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  /* 更改为半透明浅色背景，去除淡蓝色 */
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  /* 修改边框颜色 */
  border: 1rpx solid rgba(0, 200, 255, 0.2);
  gap: 20rpx;
  /* 调整阴影效果 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

/* 修改悬浮发光效果 */
.recommendation-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(0, 200, 255, 0.1), 
    transparent);
  transition: left 0.6s ease;
}

.recommendation-item:active::before {
  left: 100%;
}

.recommendation-item:active {
  transform: translateY(2rpx) scale(0.98);
  /* 调整点击时的发光效果 */
  box-shadow: 
    0 2rpx 12rpx rgba(0, 0, 0, 0.1),
    0 0 20rpx rgba(0, 150, 255, 0.2);
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(0, 200, 255, 0.3);
}

.recommendation-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
  /* 添加发光边框 */
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 0 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

/* 图标悬浮动画 */
.recommendation-icon:active {
  transform: scale(1.1) rotate(5deg);
  filter: brightness(1.2);
}

/* 能源类型 - 金色科技感 */
.recommendation-icon.energy {
  background: linear-gradient(135deg, 
    #FFD700 0%, 
    #FFA500 50%, 
    #FF8C00 100%);
  color: #1a2332;
  box-shadow: 
    0 0 16rpx rgba(255, 215, 0, 0.4),
    0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

/* 维护类型 - 蓝色科技感 */
.recommendation-icon.maintenance {
  background: linear-gradient(135deg, 
    #00d4ff 0%, 
    #0099cc 50%, 
    #006699 100%);
  color: #ffffff;
  box-shadow: 
    0 0 16rpx rgba(0, 212, 255, 0.4),
    0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

/* 优化类型 - 紫色科技感 */
.recommendation-icon.optimization {
  background: linear-gradient(135deg, 
    #8B5CF6 0%, 
    #7C3AED 50%, 
    #6D28D9 100%);
  color: #ffffff;
  box-shadow: 
    0 0 16rpx rgba(139, 92, 246, 0.4),
    0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.recommendation-content {
  flex: 1;
  min-width: 0;
  /* 优化文本排版 */
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
}

/* 标题文本优化 */
.recommendation-content .energy-text-primary {
  font-weight: 600;
  font-size: 32rpx;
  line-height: 1.4;
  color: var(--text-primary);
  /* 添加文字发光效果 */
  text-shadow: 0 0 8rpx rgba(0, 255, 255, 0.3);
}

/* 描述文本优化 */
.recommendation-content .energy-text-tertiary {
  font-size: 26rpx;
  line-height: 1.5;
  color: var(--text-muted);
  /* 限制行数，超出显示省略号 */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 按钮样式优化 */
.recommendation-item .energy-btn {
  min-width: 120rpx;
  height: 64rpx;
  padding: 0 24rpx;
  /* 修改按钮背景为半透明浅色 */
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(0, 200, 255, 0.3);
  border-radius: 32rpx;
  /* 调整阴影效果 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.recommendation-item .energy-btn text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--primary-cyan);
  text-shadow: 0 0 6rpx rgba(0, 200, 255, 0.3);
}

/* 按钮交互动画 */
.recommendation-item .energy-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 20rpx rgba(0, 150, 255, 0.2);
  border-color: rgba(0, 200, 255, 0.4);
}

/* 推荐项目入场动画 */
@keyframes recommendationSlideIn {
  0% {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.recommendation-item {
  animation: recommendationSlideIn 0.6s ease-out;
  animation-fill-mode: both;
}

/* 为每个项目添加延迟 */
.recommendation-item:nth-child(1) { animation-delay: 0.1s; }
.recommendation-item:nth-child(2) { animation-delay: 0.2s; }
.recommendation-item:nth-child(3) { animation-delay: 0.3s; }

/* 脉冲提示动画 */
@keyframes recommendationPulse {
  0%, 100% {
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
    border-color: rgba(0, 200, 255, 0.2);
  }
  50% {
    box-shadow: 0 6rpx 20rpx rgba(0, 150, 255, 0.2);
    border-color: rgba(0, 200, 255, 0.4);
    background: rgba(255, 255, 255, 0.3);
  }
}

/* 高优先级推荐添加脉冲效果 */
.recommendation-item.high-priority {
  animation: recommendationPulse 3s ease-in-out infinite;
}

/* 快捷操作卡片动画 */
@keyframes actionCardSlideUp {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes iconPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  }
}

@keyframes lightSweep {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

@keyframes successPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.06);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 16rpx 48rpx rgba(16, 185, 129, 0.2);
  }
}

/* 错开动画延迟 */
.energy-action-card:nth-child(1) {
  animation-delay: 0s;
}

.energy-action-card:nth-child(2) {
  animation-delay: 0.1s;
}

.energy-action-card:nth-child(3) {
  animation-delay: 0.2s;
}

.energy-action-card:nth-child(4) {
  animation-delay: 0.3s;
}

/* 状态指示器动画 - 调整为与首页一致的效果 */
.energy-status-dot {
  animation: statusPulse 2s ease-in-out infinite;
}

@keyframes statusPulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
    box-shadow: 0 0 0 rgba(59, 130, 246, 0.4);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.1);
    box-shadow: 0 0 10rpx rgba(59, 130, 246, 0.6);
  }
}

