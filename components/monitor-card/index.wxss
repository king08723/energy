@import '../../styles/design-system.wxss';

.data-card {
  padding: 20rpx;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  min-height: 120rpx;
  min-width: 0;
}

/* Active state removed - not supported in component WXSS */

.data-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
  flex-shrink: 0;
  align-self: center;
}

.icon-svg {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

.energy-card-power .power-icon, .power-icon {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.energy-card-water .water-icon, .water-icon {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
  box-shadow: 0 4rpx 12rpx rgba(6, 182, 212, 0.3);
}

.energy-card-gas .gas-icon, .gas-icon {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  box-shadow: 0 4rpx 12rpx rgba(249, 115, 22, 0.3);
}

.energy-card-carbon .carbon-icon, .carbon-icon {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.data-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  overflow: visible;
  align-self: center;
  width: auto;
}

.data-title {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
  line-height: 1.2;
}

.data-value-container {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
  min-width: fit-content;
  flex-wrap: nowrap;
  white-space: nowrap;
}

.data-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  letter-spacing: 0.5rpx;
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  white-space: nowrap;
  flex-shrink: 0;
}

.data-unit {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.data-trend {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(100, 116, 139, 0.1);
  border: 1px solid rgba(100, 116, 139, 0.2);
  transition: all 0.2s ease;
  flex-shrink: 0;
  margin-left: auto;
}

.trend-arrow {
  font-size: 20rpx;
  color: #64748b;
  font-weight: 600;
}

.data-trend.up {
  background: rgba(239, 68, 68, 0.1);
  border-color: rgba(239, 68, 68, 0.2);
}

.data-trend.down {
  background: rgba(16, 185, 129, 0.1);
  border-color: rgba(16, 185, 129, 0.2);
}

.data-trend.up .trend-arrow {
  color: #ef4444;
}

.data-trend.down .trend-arrow {
  color: #10b981;
}