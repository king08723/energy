/* pages/add-device/add-device.wxss */
@import '../../styles/design-system.wxss';

/* 添加方式选择 */
.add-methods {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.method-item.active {
  background: rgba(var(--energy-primary-rgb), 0.1);
  border-color: var(--energy-primary);
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: rgba(var(--energy-primary-rgb), 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.method-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.method-check {
  margin-left: 16rpx;
}

/* 扫码区域 */
.scan-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scan-placeholder {
  width: 100%;
  height: 400rpx;
  border: 4rpx dashed rgba(var(--energy-primary-rgb), 0.3);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(var(--energy-primary-rgb), 0.05);
}

.scan-tips {
  padding: 16rpx 24rpx;
  background: rgba(var(--energy-warning-rgb), 0.1);
  border-radius: 12rpx;
  border-left: 6rpx solid var(--energy-warning);
}

/* 表单区域 */
.form-section {
  display: flex;
  flex-direction: column;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.device-types {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.type-item {
  flex: 1;
  min-width: 120rpx;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.type-item.active {
  background: rgba(var(--energy-primary-rgb), 0.1);
  border-color: var(--energy-primary);
}

.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.secret-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx;
}

.form-item {
  position: relative;
}

/* 搜索区域 */
.search-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-status {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.search-loading {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-animation {
  display: flex;
  gap: 8rpx;
  margin-bottom: 32rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--energy-primary);
  animation: loading-bounce 1.4s ease-in-out infinite both;
}

.loading-dot:nth-child(1) { animation-delay: -0.32s; }
.loading-dot:nth-child(2) { animation-delay: -0.16s; }
.loading-dot:nth-child(3) { animation-delay: 0s; }

@keyframes loading-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.found-devices {
  width: 100%;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.device-item:active {
  background: rgba(var(--energy-primary-rgb), 0.1);
  border-color: var(--energy-primary);
}

.device-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.device-icon.power {
  background: rgba(var(--energy-primary-rgb), 0.1);
}

.device-icon.water {
  background: rgba(54, 162, 235, 0.1);
}

.device-icon.gas {
  background: rgba(255, 99, 132, 0.1);
}

.device-icon.carbon {
  background: rgba(75, 192, 192, 0.1);
}

.device-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.device-select {
  margin-left: 16rpx;
  opacity: 0.6;
}

.search-actions {
  display: flex;
  justify-content: center;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 32rpx 0;
  position: sticky;
  bottom: 0;
  background: linear-gradient(to top, var(--energy-bg-primary) 70%, transparent);
  padding-top: 60rpx;
}

.action-buttons .energy-btn {
  flex: 1;
}

.energy-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}
.container {
  padding: 20rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.content {
  /* 页面内容样式 */
}