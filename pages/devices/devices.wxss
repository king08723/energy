}

/* 页码导航样式 */
.pagination-container {
  padding: 24rpx;
  background: var(--energy-color-surface);
  border-radius: 16rpx;
  margin: 16rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  /* 将分页信息和控件放在一行 */
