}

/* 分类成果 */
.category-achievements {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.category-item {
  padding: 16rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #374151;
}

.category-percentage {
  font-size: 24rpx;
  font-weight: 600;
  color: #3b82f6;
}

.category-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6, #1d4ed8);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.category-value {
  font-size: 20rpx;
  color: #64748b;
  white-space: nowrap;
}

/* 里程碑 */
.milestones-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.milestone-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.milestone-icon {
  font-size: 32rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  border-radius: 50%;
  flex-shrink: 0;
}

.milestone-content {
  flex: 1;
}

.milestone-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 4rpx;
  display: block;
}

.milestone-description {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
  margin-bottom: 4rpx;
  display: block;
}

.milestone-date {
  font-size: 20rpx;
  color: #9ca3af;
}

.milestone-reward {
  margin-left: 16rpx;
}

.reward-badge {
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #92400e;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

/* 节能目标样式 */
.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goal-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.goal-status.status-in_progress {
  background: rgba(245, 158, 11, 0.1);
  color: #d97706;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.goal-progress {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.progress-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-label {
  font-size: 22rpx;
  color: #374151;
  font-weight: 500;
}

.progress-bar-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-text {
  font-size: 20rpx;
  color: #64748b;
  white-space: nowrap;
}

.goal-actions {
  display: flex;
  justify-content: center;
}

/* 目标建议 */
.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.suggestion-item {
  padding: 16rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.suggestion-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.suggestion-description {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
}

/* 知识库样式 */
.knowledge-item {
  transition: all 0.3s ease;
}

.knowledge-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.knowledge-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  cursor: pointer;
}

.knowledge-info {
  flex: 1;
}

.knowledge-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.knowledge-summary {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: block;
}

.knowledge-meta {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.read-time {
  font-size: 20rpx;
  color: #9ca3af;
}

.difficulty {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
  font-weight: 500;
}

.difficulty.difficulty-beginner {
  background: rgba(34, 197, 94, 0.1);
  color: #16a34a;
}

.difficulty.difficulty-intermediate {
  background: rgba(245, 158, 11, 0.1);
  color: #d97706;
}

.difficulty.difficulty-advanced {
  background: rgba(239, 68, 68, 0.1);
  color: #dc2626;
}

.knowledge-toggle {
  margin-left: 16rpx;
}

.toggle-icon {
  font-size: 20rpx;
  color: #64748b;
}

.knowledge-content {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.knowledge-text {
  font-size: 22rpx;
  color: #374151;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: block;
}

.knowledge-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.knowledge-tag {
  padding: 4rpx 12rpx;
  background: rgba(59, 130, 246, 0.1);
  color: #2563eb;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.2);
}

/* 快捷操作 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-button:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #374151;
  font-weight: 500;
}

/* 旋转动画 */
.rotating {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}