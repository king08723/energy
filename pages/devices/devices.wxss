.device-scroll-container {
  min-height: 600rpx; /* 最小高度，确保可以滚动 */
  max-height: 1200rpx; /* 最大高度限制 */
  width: 100%;
  flex: 1; /* 自适应剩余空间 */
}

/* 加载更多组件样式 */
