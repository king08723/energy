.footer-container {
  padding: 32rpx 24rpx; /* Consistent with energy-glass-card padding */
  text-align: center;
  
  /* Glassmorphism effect from design-system.wxss */
  background: var(--bg-card);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  border: 1px solid var(--border-primary);
  border-radius: 24rpx; /* Consistent with energy-glass-card */
  box-shadow: 
    var(--shadow-primary),
    0 1rpx 4rpx rgba(0, 255, 255, 0.2) inset,
    0 0 0 1px rgba(255, 255, 255, 0.05) inset;
  
  position: relative;
  z-index: 1;
  margin-top: 40rpx; /* Keep some separation from content above */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx; /* Space between text lines */
}

.footer-company-name {
  font-size: 28rpx;
  color: var(--text-primary); /* Use primary text color from design system */
  font-weight: 500;
}

.footer-copyright,
.footer-icp {
  font-size: 24rpx;
  color: var(--text-secondary); /* Use secondary text color from design system */
}

/* 联系电话样式 */
.footer-contact {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin: 4rpx 0;
}

.footer-contact-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 400;
}

.footer-phone {
  font-size: 24rpx;
  color: var(--text-primary);
  font-weight: 500;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  letter-spacing: 1rpx;
  /* 添加轻微的文字阴影增强可读性 */
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  /* 防止文本选择，增加防爬虫效果 */
  -webkit-user-select: none;
  user-select: none;
}
