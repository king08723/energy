/* pages/devices/devices.wxss */
@import "../../styles/design-system.wxss";

/* 补充缺失的工具类 */
.energy-flex-1 {
  flex: 1;
}

.energy-mr-16 {
  margin-right: 16rpx;
}

.energy-mr-8 {
  margin-right: 8rpx;
}

/* CSS变量定义 */
:root {
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --card-border-radius: 16rpx;
  --card-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  --transition-duration: 0.3s;
  --transition-easing: cubic-bezier(0.4, 0, 0.2, 1);
}

/* 修改添加设备按钮样式，与首页chart-tab未选中状态一致 */
.energy-btn-primary {
  background: transparent;
  font-size: 24rpx;
  color: #64748b;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(100, 116, 139, 0.2);
  box-shadow: none;
  /* 修改按钮布局为水平排列 */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  /* 移除默认的圆形样式 */
  border-radius: 20rpx;
}

.energy-btn-primary:hover,
.energy-btn-primary:active {
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.15);
  transform: translateY(0) scale(1);
}

/* 修改添加设备按钮中的图标和文本样式 */
.energy-btn-primary .energy-icon-text,
.energy-btn-primary text {
  font-size: 24rpx;
  color: inherit;
}

/* 调整"+"与"添加设备"之间的间距为半个字符宽度 */
.energy-btn-primary .energy-icon-text.energy-mr-8 {
  /* 覆盖原有的margin-right: 8rpx，改为4rpx（约半个字符宽度） */
  margin-right: 4rpx !important;
}

/* 覆盖设计系统中的标题样式，与首页chart-title保持一致 */
.energy-title-large {
  font-size: 40rpx; /* 稍大于chart-title */
  font-weight: bold;
  color: #1e293b;
  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.1);
  letter-spacing: 1rpx;
}

.energy-title-medium {
  font-size: 32rpx; /* 与chart-title一致 */
  font-weight: bold;
  color: #1e293b;
  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.1);
}

.energy-title-small {
  font-size: 28rpx; /* 稍小于chart-title */
  font-weight: bold;
  color: #1e293b;
  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.1);
}

/* 减少动画偏好设置 - 移除不支持的@media查询 */

.energy-container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* 现代高级浅色背景渐变 - 与首页一致 */
  background: linear-gradient(135deg, 
    #f8fafc 0%, 
    #f1f5f9 25%, 
    #e2e8f0 50%, 
    #cbd5e1 75%, 
    #f8fafc 100%);
  /* 添加微妙的纹理效果 */
  background-image: 
    radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(16, 185, 129, 0.03) 0%, transparent 50%);
  padding: 32rpx 24rpx;
  overflow-x: hidden;
  box-sizing: border-box;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 实时刷新指示器 */
.refresh-indicator {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-right: 16rpx;
  transition: all 0.3s ease;
}

.refresh-indicator.active {
  animation: refreshSpin 1.5s linear infinite;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

@keyframes refreshSpin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 四列网格布局 - 响应式优化 */
.energy-grid-4 {
  display: grid;
  /* 修改为固定4列布局，确保始终在一行显示 */
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

/* 小屏幕适配 - 移除不支持的@media查询，使用默认响应式布局 */

/* 设备统计卡片优化样式 - 添加主题色彩变量 */
.energy-data-card {
  position: relative;
  /* 调整内边距以适应更紧凑的布局 */
  padding: 20rpx 16rpx;
  /* 统一卡片最小高度，确保视觉协调 */
  min-height: 140rpx;
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.95) 0%, 
    rgba(248, 250, 252, 0.9) 50%,
    rgba(241, 245, 249, 0.85) 100%);
  border: 2rpx solid rgba(var(--card-theme-rgb), 0.1);
  border-radius: var(--card-border-radius);
  box-shadow: 
    var(--card-shadow),
    0 2rpx 8rpx rgba(var(--card-theme-rgb), 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  transition: all var(--transition-duration) var(--transition-easing);
  overflow: hidden;
  /* 垂直布局：图标、标签文字、数字、指示器居中对齐 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  /* 点击反馈效果 */
  cursor: pointer;
}

/* 为每个卡片定义独特的主题色彩 */
.energy-data-card:nth-child(1) {
  --card-theme-rgb: 59, 130, 246; /* 蓝色 - 总设备 */
  --card-theme-color: #3B82F6;
}

.energy-data-card:nth-child(2) {
  --card-theme-rgb: 16, 185, 129; /* 绿色 - 在线设备 */
  --card-theme-color: #10B981;
}

.energy-data-card:nth-child(3) {
  --card-theme-rgb: 245, 158, 11; /* 橙色 - 告警 */
  --card-theme-color: #F59E0B;
}

.energy-data-card:nth-child(4) {
  --card-theme-rgb: 139, 92, 246; /* 紫色 - 健康度 */
  --card-theme-color: #8B5CF6;
}

.energy-data-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, 
    #3B82F6 0%, 
    #10B981 50%, 
    #8B5CF6 100%);
  opacity: 0.8;
}

.energy-data-card:hover {
  transform: translateY(-4rpx) scale(1.02);
  border-color: rgba(var(--card-theme-rgb), 0.25);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.12),
    0 8rpx 24rpx rgba(var(--card-theme-rgb), 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

/* 点击反馈效果 */
.energy-data-card:active {
  transform: translateY(-2rpx) scale(0.98);
  transition: all 0.1s ease;
}

/* 异常状态指示 */
.energy-data-card.warning {
  border-color: rgba(245, 158, 11, 0.3);
  background: linear-gradient(135deg, 
    rgba(245, 158, 11, 0.05) 0%, 
    rgba(255, 255, 255, 0.95) 50%,
    rgba(248, 250, 252, 0.9) 100%);
}

.energy-data-card.error {
  border-color: rgba(239, 68, 68, 0.3);
  background: linear-gradient(135deg, 
    rgba(239, 68, 68, 0.05) 0%, 
    rgba(255, 255, 255, 0.95) 50%,
    rgba(248, 250, 252, 0.9) 100%);
}

.energy-data-card:nth-child(1)::before {
  background: linear-gradient(90deg, #3B82F6 0%, #1D4ED8 100%);
}

.energy-data-card:nth-child(2)::before {
  background: linear-gradient(90deg, #10B981 0%, #059669 100%);
}

.energy-data-card:nth-child(3)::before {
  background: linear-gradient(90deg, #F59E0B 0%, #D97706 100%);
}

.energy-data-card:nth-child(4)::before {
  background: linear-gradient(90deg, #8B5CF6 0%, #7C3AED 100%);
}

/* 信号强度指示器样式 */
.signal-strength {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 3rpx;
  margin-top: 12rpx;
  order: 5;
}

.signal-bar {
  width: 6rpx;
  background: #E5E7EB;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}

.signal-bar:nth-child(1) { height: 8rpx; }
.signal-bar:nth-child(2) { height: 12rpx; }
.signal-bar:nth-child(3) { height: 16rpx; }
.signal-bar:nth-child(4) { height: 20rpx; }

.signal-bar.active {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  box-shadow: 0 0 8rpx rgba(16, 185, 129, 0.4);
}

/* 健康度指示器样式 */
.health-indicator {
  width: 100%;
  height: 6rpx;
  background: #E5E7EB;
  border-radius: 3rpx;
  margin-top: 12rpx;
  overflow: hidden;
  order: 5;
}

.health-bar {
  height: 100%;
  border-radius: 3rpx;
  transition: all 0.5s ease;
  background: linear-gradient(90deg, #10B981 0%, #059669 100%);
  box-shadow: 0 0 8rpx rgba(16, 185, 129, 0.3);
  position: relative;
}

.health-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: healthShimmer 2s infinite;
}

@keyframes healthShimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

/* 设备类型指示器样式 */
.device-type-indicator {
  display: flex;
  gap: 6rpx;
  margin-top: 12rpx;
  justify-content: center;
  order: 5;
}

.device-type-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  opacity: 0.3;
  transition: all 0.3s ease;
  position: relative;
}

.device-type-dot.active {
  opacity: 1;
  transform: scale(1.1);
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.2);
}

.device-type-dot.active::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border-radius: 50%;
  background: inherit;
  opacity: 0.3;
  animation: deviceTypePulse 2s infinite;
}

@keyframes deviceTypePulse {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.3); opacity: 0.1; }
}

/* 告警严重程度指示器样式 */
.alert-severity-indicator {
  display: flex;
  gap: 4rpx;
  margin-top: 12rpx;
  justify-content: center;
  order: 5;
}

.severity-level {
  width: 20rpx;
  height: 6rpx;
  border-radius: 3rpx;
  opacity: 0.2;
  transition: all 0.3s ease;
  position: relative;
}

.severity-level.critical {
  background: #F44336;
}

.severity-level.warning {
  background: #FF9800;
}

.severity-level.info {
  background: #2196F3;
}

.severity-level.active {
  opacity: 1;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.3);
}

.severity-level.active::after {
  content: '';
  position: absolute;
  top: -1rpx;
  left: -1rpx;
  right: -1rpx;
  bottom: -1rpx;
  border-radius: 3rpx;
  background: inherit;
  opacity: 0.4;
  animation: severityPulse 1.5s infinite;
}

@keyframes severityPulse {
  0%, 100% { transform: scaleY(1); opacity: 0.4; }
  50% { transform: scaleY(1.5); opacity: 0.2; }
}

/* 卡片图标样式 - 使用主题色彩 */
.card-icon {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, 
    var(--card-theme-color) 0%, 
    rgba(var(--card-theme-rgb), 0.8) 100%);
  box-shadow: 
    0 6rpx 16rpx rgba(var(--card-theme-rgb), 0.25),
    0 2rpx 8rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  order: 1;
  transition: all var(--transition-duration) var(--transition-easing);
}

.card-icon .energy-icon-text {
  font-size: 28rpx;
  line-height: 1;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 图标悬停效果 */
.energy-data-card:hover .card-icon {
  transform: scale(1.1);
  box-shadow: 
    0 8rpx 20rpx rgba(var(--card-theme-rgb), 0.35),
    0 4rpx 12rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
}

/* 数字和趋势容器 */
.number-with-trend {
  display: flex;
  flex-direction: column;
  align-items: center;
  order: 3;
  /* 确保容器内元素正确排列 */
  width: 100%;
  position: relative;
}

/* 趋势指示器样式 */
.trend-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  /* 增加上边距，避免压住数字 */
  margin-top: 26rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  /* 确保趋势指示器在数字下方，指示器上方 */
  order: 3.5;
  /* 防止遮盖其他元素 */
  position: relative;
  z-index: 1;
}

.trend-arrow {
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1;
}

.trend-arrow.up {
  color: #10B981;
  text-shadow: 0 0 4rpx rgba(16, 185, 129, 0.4);
}

.trend-arrow.down {
  color: #EF4444;
  text-shadow: 0 0 4rpx rgba(239, 68, 68, 0.4);
}

.trend-arrow.stable {
  color: #6B7280;
  text-shadow: 0 0 4rpx rgba(107, 114, 128, 0.4);
}

.trend-text {
  font-size: 18rpx;
  font-weight: 500;
  color: #6B7280;
  letter-spacing: 0.3rpx;
}

/* 设备统计卡片文字样式优化 */
.energy-data-card .energy-text-small {
  font-size: 24rpx;
  font-weight: 500;
  color: #64748B;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
  text-transform: uppercase;
  text-align: center;
  /* 标签文字在图标下方 */
  order: 2;
  width: 100%;
}

.energy-data-card .energy-title-medium {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 8rpx;
  color: #1e293b;
  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.1);
  text-align: center;
  /* 数字显示在标签下方，趋势指示器上方 */
  order: 3.2;
  width: 100%;
  position: relative;
  z-index: 2;
}

.energy-data-card .energy-text-success {
  color: #059669;
  text-shadow: 0 0 8rpx rgba(5, 150, 105, 0.3);
}

.energy-data-card .energy-text-warning {
  color: #D97706;
  text-shadow: 0 0 8rpx rgba(217, 119, 6, 0.3);
}

.energy-data-card .energy-text-primary {
  color: #1D4ED8;
  text-shadow: 0 0 8rpx rgba(29, 78, 216, 0.3);
}

/* 批量操作工具栏 */
.batch-toolbar {
  border: 2rpx solid #E5E7EB;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(147, 51, 234, 0.05) 100%);
}

/* 搜索输入框改进 */
.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 80rpx 0 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.8) 100%);
  border: 2rpx solid rgba(229, 231, 235, 0.8);
  border-radius: 16rpx;
  color: #374151;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.search-input::placeholder {
  color: #9CA3AF;
}

.search-icon, .clear-icon {
  position: absolute;
  right: 24rpx;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9CA3AF;
  font-size: 24rpx;
}

.clear-icon {
  color: #6B7280;
  cursor: pointer;
}

/* 设备列表样式 - 优化后的卡片式设计 */
.device-list {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.device-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 28rpx;
  padding: 0;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
}

.device-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
}

.device-card.batch-mode {
  padding-left: 80rpx;
}

.device-card.selected {
  background: rgba(74, 144, 226, 0.08);
  border-color: #4A90E2;
  transform: translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(74, 144, 226, 0.2);
}

.device-card.selected::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #4A90E2 0%, #357ABD 100%);
}

.batch-checkbox {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: white;
}

.checkbox.checked {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-color: #4A90E2;
  transform: scale(1.1);
}

.checkbox.checked .energy-icon-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 设备卡片内容区域 */
.device-card-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 独立的设备标题行 */
.device-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

/* 设备名称样式 - 与首页chart-title保持一致 */
.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.1);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 设备头部信息 */
.device-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.device-primary-info {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  flex: 1;
}

.device-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.25);
  flex-shrink: 0;
}

.device-icon .energy-icon-text {
  font-size: 28rpx;
  color: white;
}

.health-indicator-dot {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.health-indicator-dot.good {
  background: #4CAF50;
}

.health-indicator-dot.warning {
  background: #FF9800;
}

.health-indicator-dot.error {
  background: #F44336;
}

/* 设备基础信息 */
.device-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.device-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
