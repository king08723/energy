  box-shadow: 0 0 8rpx rgba(239, 68, 68, 0.6);
}

.alert-dot.warning {
  background: #faad14;
  box-shadow: 0 0 8rpx rgba(245, 158, 11, 0.6);
}

.alert-dot.info {
  background: #1890ff;
  box-shadow: 0 0 8rpx rgba(24, 144, 255, 0.6);
}

/* 兼容旧的样式名 */
