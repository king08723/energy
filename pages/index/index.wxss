  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.1);
}

.chart-tabs {
  display: flex;
  gap: 12rpx;
}

.chart-tab {
  font-size: 24rpx;
  color: #64748b;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
