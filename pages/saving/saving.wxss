/* pages/saving/saving.wxss */
@import "../../styles/design-system.wxss";

/* 节能概览网格 */
.saving-overview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.saving-overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.saving-overview-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.overview-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.overview-icon.energy {
  background: linear-gradient(135deg, #FFD700, #FFA500);
}

.overview-icon.cost {
  background: linear-gradient(135deg, #10B981, #059669);
}

.overview-icon.carbon {
  background: linear-gradient(135deg, #22C55E, #16A34A);
}

.overview-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.overview-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  line-height: 1;
}

.overview-unit {
  font-size: 20rpx;
  color: #64748b;
  margin-bottom: 4rpx;
}

.overview-label {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.2;
}

/* 标签页导航 */
.saving-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  min-width: 100rpx;
}

.tab-item.active {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.tab-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 20rpx;
  font-weight: 500;
  line-height: 1;
}

.tab-item.active .tab-text {
  color: white;
}

/* 筛选器样式 */
.filter-section {
  margin-bottom: 16rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.filter-tag {
  padding: 8rpx 16rpx;
  background: rgba(100, 116, 139, 0.1);
  color: #64748b;
  border-radius: 20rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(100, 116, 139, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
}

.filter-tag.active {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-color: #3b82f6;
}

/* 节能方案样式 */
.saving-plan-item {
  transition: all 0.3s ease;
}

.saving-plan-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.plan-title-section {
  flex: 1;
}

.plan-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.plan-badges {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.priority-badge, .status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.priority-badge.priority-high {
  background: rgba(239, 68, 68, 0.1);
  color: #dc2626;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

.priority-badge.priority-medium {
  background: rgba(245, 158, 11, 0.1);
  color: #d97706;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.priority-badge.priority-low {
  background: rgba(34, 197, 94, 0.1);
  color: #16a34a;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
}

.status-badge.status-recommended {
  background: rgba(59, 130, 246, 0.1);
  color: #2563eb;
  border: 1rpx solid rgba(59, 130, 246, 0.2);
}

.status-badge.status-in_progress {
  background: rgba(245, 158, 11, 0.1);
  color: #d97706;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.status-badge.status-planned {
  background: rgba(107, 114, 128, 0.1);
  color: #4b5563;
  border: 1rpx solid rgba(107, 114, 128, 0.2);
}

.plan-actions {
  margin-left: 16rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  background: rgba(59, 130, 246, 0.1);
  color: #2563eb;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
}

.action-btn:hover {
  background: rgba(59, 130, 246, 0.2);
}

.plan-description {
  line-height: 1.5;
}

.plan-savings {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.saving-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx;
  background: rgba(248, 250, 252, 0.8);
  border-radius: 8rpx;
  min-width: 120rpx;
}

.saving-label {
  font-size: 20rpx;
  color: #64748b;
  margin-bottom: 4rpx;
}

.saving-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #1e293b;
}

/* 方案详情 */
.plan-details {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.detail-section {
  margin-bottom: 16rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 12rpx;
  background: rgba(248, 250, 252, 0.5);
  border-radius: 6rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #64748b;
}

.detail-value {
  font-size: 22rpx;
  color: #1e293b;
  font-weight: 500;
}

.action-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 8rpx 0;
}

.action-number {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.action-text {
  font-size: 22rpx;
  color: #374151;
  line-height: 1.4;
  flex: 1;
}

.plan-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.plan-buttons {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.btn-secondary, .btn-primary {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 1rpx solid;
}

.btn-secondary {
  background: transparent;
  color: #64748b;
  border-color: #d1d5db;
}

.btn-secondary:hover {
  background: rgba(100, 116, 139, 0.1);
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border-color: #3b82f6;
}

.btn-primary:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 节能贴士样式 */
.saving-tip-item {
  transition: all 0.3s ease;
}

.saving-tip-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.tip-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.tip-icon {
  font-size: 32rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 50%;
  flex-shrink: 0;
}

.tip-info {
  flex: 1;
}

.tip-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
  display: block;
}

.tip-badges {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.difficulty-badge, .potential-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.difficulty-badge.difficulty-easy {
  background: rgba(34, 197, 94, 0.1);
  color: #16a34a;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
}

.difficulty-badge.difficulty-medium {
  background: rgba(245, 158, 11, 0.1);
  color: #d97706;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.potential-badge.potential-high {
  background: rgba(239, 68, 68, 0.1);
  color: #dc2626;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

.potential-badge.potential-medium {
  background: rgba(245, 158, 11, 0.1);
  color: #d97706;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.tip-actions {
  margin-left: 16rpx;
}

.tip-content {
  line-height: 1.5;
  padding-left: 64rpx;
}

