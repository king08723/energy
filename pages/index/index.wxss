@import '../../styles/design-system.wxss';
/* 首页样式 - 高级科技感设计 */

.index-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

.container {
  position: relative;
  min-height: 100vh;
  /* 现代高级浅色背景渐变 */
  background: linear-gradient(135deg, 
    #f8fafc 0%, 
    #f1f5f9 25%, 
    #e2e8f0 50%, 
    #cbd5e1 75%, 
    #f8fafc 100%);
  /* 添加微妙的纹理效果 */
  background-image: 
    radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(16, 185, 129, 0.03) 0%, transparent 50%);
  padding: 32rpx 24rpx;
  overflow-x: hidden;
  box-sizing: border-box;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  /* 现代浅色渐变色彩 */
  background: linear-gradient(135deg, 
    rgba(59, 130, 246, 0.08) 0%, 
    rgba(16, 185, 129, 0.06) 50%, 
    rgba(139, 92, 246, 0.05) 100%);
  /* 柔和发光效果 */
  box-shadow: 
    0 0 40rpx rgba(59, 130, 246, 0.1),
    0 0 80rpx rgba(16, 185, 129, 0.08),
    inset 0 0 30rpx rgba(255, 255, 255, 0.3);
  animation: float 6s ease-in-out infinite;
}

.bg-circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  right: -50rpx;
  animation-delay: 0s;
  opacity: 0.6;
}

.bg-circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 60%;
  left: -30rpx;
  animation-delay: 2s;
  opacity: 0.4;
}

.bg-circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 30%;
  left: 50%;
  animation-delay: 4s;
  opacity: 0.5;
}

.bg-circle-4 {
  width: 120rpx;
  height: 120rpx;
  top: 80%;
  right: 20%;
  animation-delay: 6s;
  opacity: 0.3;
}

.bg-circle-5 {
  width: 80rpx;
  height: 80rpx;
  top: 45%;
  right: 10%;
  animation-delay: 1s;
  opacity: 0.4;
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0px) rotate(0deg) scale(1); 
    opacity: 0.6;
  }
  33% { 
    transform: translateY(-15px) rotate(120deg) scale(1.1); 
    opacity: 0.8;
  }
  66% { 
    transform: translateY(-25px) rotate(240deg) scale(0.9); 
    opacity: 0.4;
  }
}

/* 毛玻璃效果卡片 - 现代高级设计 */
.glass-card {
  /* 现代白色半透明背景 */
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.9) 0%, 
    rgba(255, 255, 255, 0.85) 50%,
    rgba(248, 250, 252, 0.9) 100%);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  /* 优雅的边框 */
  border: 1px solid rgba(59, 130, 246, 0.15);
  border-radius: 24rpx;
  /* 现代阴影效果 */
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 1rpx 4rpx rgba(59, 130, 246, 0.1) inset,
    0 0 0 1px rgba(255, 255, 255, 0.8) inset;
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.glass-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(59, 130, 246, 0.15) inset,
    0 0 0 1px rgba(255, 255, 255, 0.9) inset;
  border-color: rgba(59, 130, 246, 0.25);
}

/* 顶部状态栏 - 优化设计 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0 24rpx 0;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
  width: 100%;
  /* 移除边框，使用阴影分隔 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.status-left {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.time {
  font-size: 36rpx;
  font-weight: 800; /* 增强字重 */
  color: #1e293b;
  text-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.15);
  letter-spacing: 1rpx;
}

.date {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.status-right {
  display: flex;
  align-items: center;
  gap: 24rpx; /* 增加间距 */
}

.weather {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  background: rgba(59, 130, 246, 0.08);
  border: 1px solid rgba(59, 130, 246, 0.15);
  border-radius: 24rpx;
  transition: all 0.2s ease;
}

.weather:active {
  transform: scale(0.95);
  background: rgba(59, 130, 246, 0.15);
}

.weather-icon {
  font-size: 28rpx;
}

.weather-temp {
  font-size: 26rpx;
  color: #3b82f6;
  font-weight: 600;
}

.notification {
  position: relative;
  padding: 12rpx;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.05);
  transition: all 0.2s ease;
}

.notification:active {
  transform: scale(0.9);
  background: rgba(59, 130, 246, 0.1);
}

.notification-icon {
  font-size: 32rpx;
  color: #3b82f6;
}

.notification-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  background: #ef4444;
  color: #ffffff;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
  font-weight: 600;
  /* 呼吸动画 */
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.1);
  }
}

/* 主标题 - 优化设计 */
.main-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
  padding: 8rpx 0;
}

.title-section {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.title-text {
  font-size: 52rpx;
  font-weight: 700;
  color: #1e293b;
  /* 简化渐变效果 */
  background: linear-gradient(135deg, #1e293b 0%, #3b82f6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  /* 优化阴影效果 */
  text-shadow: 
    0 2rpx 4rpx rgba(59, 130, 246, 0.08),
    0 4rpx 8rpx rgba(0, 0, 0, 0.03);
  letter-spacing: 1.5rpx;
  transition: all 0.3s ease;
  line-height: 1.2;
}

.title-text:hover {
  transform: translateY(-2rpx);
  text-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.2);
}

.title-subtitle {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  margin-top: -4rpx;
}

.title-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.refresh-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.08);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(59, 130, 246, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.1);
}

.refresh-btn:active {
  transform: scale(0.9);
  background: rgba(59, 130, 246, 0.15);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
}

.refresh-btn:hover {
  background: rgba(59, 130, 246, 0.12);
  border-color: rgba(59, 130, 246, 0.25);
}

.refresh-icon {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 600;
}

.refreshing .refresh-icon {
  animation: spin 1s linear infinite;
}

.refreshing {
  animation: refreshPulse 1.5s ease-in-out infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes refreshPulse {
  0%, 100% {
    box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.1);
  }
  50% {
    box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.3);
  }
}

/* 总能耗概览卡片 - 优化设计 */
.energy-overview {
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  transition: all 0.3s ease;
}

.energy-overview:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
}

.energy-overview .overview-content {
  position: relative;
  z-index: 1;
}

.energy-overview::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(59, 130, 246, 0.03) 0%, 
    rgba(16, 185, 129, 0.02) 50%,
    rgba(255, 255, 255, 0.05) 100%);
  border-radius: 24rpx;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.energy-overview:hover::before {
  opacity: 1;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(59, 130, 246, 0.08);
}

.overview-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.08);
}

.overview-subtitle {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
  padding: 6rpx 16rpx;
  background: rgba(16, 185, 129, 0.08);
  border-radius: 16rpx;
  border: 1px solid rgba(16, 185, 129, 0.15);
}

.overview-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  position: relative;
}

.overview-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 120rpx;
}

.total-energy {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-left: 2em; /* 向右移动2个字宽度 */
}

.energy-value {
  font-size: 80rpx; /* 增大数值显示 */
  font-weight: 800;
  color: #1e293b;
  text-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.15);
  letter-spacing: 1rpx;
  /* 数值变化动画 */
  transition: all 0.3s ease;
  counter-reset: num var(--num);
}

.energy-unit {
  font-size: 28rpx; /* 适当缩小单位 */
  color: #64748b;
  font-weight: 600;
  margin-left: 4rpx;
}

.energy-trend {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  border: 1px solid rgba(59, 130, 246, 0.1);
}

.trend-text {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.trend-value {
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.trend-up {
  color: #ef4444; /* 红色表示增耗 */
  text-shadow: 0 2rpx 6rpx rgba(239, 68, 68, 0.3);
}

.trend-up::before {
  content: '↗';
  font-size: 24rpx;
}

.trend-down {
  color: #10b981; /* 绿色表示节能 */
  text-shadow: 0 2rpx 6rpx rgba(16, 185, 129, 0.3);
}

.trend-down::before {
  content: '↘';
  font-size: 24rpx;
}

/* 能耗分类列表布局 */
.energy-breakdown-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 16rpx;
}

/* 列表视图中的卡片样式 */
.data-card-list {
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-bottom: 0;
  cursor: pointer;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  min-height: 100rpx; /* 适当减小高度 */
  border: 1px solid rgba(59, 130, 246, 0.08);
}

.data-card-list:active {
  transform: scale(0.98); /* 优化点击反馈 */
}

.data-card-list:hover {
  transform: translateY(-2rpx);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.08),
    0 2rpx 8rpx rgba(59, 130, 246, 0.1);
  border-color: rgba(59, 130, 246, 0.15);
}

/* 列表内容布局 */
.data-card-list-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

/* 列表中的信息样式 */
.data-info-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

/* 列表中的行样式 - 左右排列 */
.data-info-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start; /* 改为左对齐 */
  align-items: center;
  width: 100%;
  position: relative; /* 添加相对定位 */
}

/* 调整标题样式，使其居左 */
.data-info-row .data-title {
  position: absolute;
  left: 0;
}

/* 调整数值容器位置，使其居中并向右偏移一个字宽 */
.data-info-row .data-value-container {
  position: absolute;
  left: 60%; /* 从50%增加到55%，向右偏移 */
  transform: translateX(-50%);
}

/* 确保行高度足够 */
.data-info-row {
  min-height: 60rpx; /* 添加最小高度 */
  padding: 10rpx 0; /* 添加上下内边距 */
}

/* SVG图标统一样式 */
.icon-svg {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1); /* 将图标变为白色 */
}

/* 快速操作按钮 */
.overview-actions {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1px solid rgba(59, 130, 246, 0.08);
}

.action-btn {
  flex: 1;
  padding: 12rpx 16rpx;
  background: rgba(59, 130, 246, 0.05);
  border: 1px solid rgba(59, 130, 246, 0.15);
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(59, 130, 246, 0.1);
}

.action-btn:hover {
  background: rgba(59, 130, 246, 0.08);
  border-color: rgba(59, 130, 246, 0.25);
}

.action-text {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: 600;
}

/* 加载状态优化 */
.loading-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  gap: 16rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid rgba(59, 130, 246, 0.1);
  border-top: 3rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

/* 实时数据监控区域 */
.realtime-monitor {
  margin-top: 32rpx;
  padding: 32rpx;
}

.monitor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(59, 130, 246, 0.08);
}

.monitor-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
  text-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.08);
}

.monitor-subtitle {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
  padding: 6rpx 16rpx;
  background: rgba(59, 130, 246, 0.08);
  border-radius: 16rpx;
  border: 1px solid rgba(59, 130, 246, 0.15);
}

/* 实时数据网格 - 优化设计 */
.data-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

@media (min-width: 768px) {
  .data-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx; /* 稍微增加间距 */
  }
}

